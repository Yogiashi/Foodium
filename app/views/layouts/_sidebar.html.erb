<ul class="sidebar", style="list-style: none;">
  <% if user_signed_in? %>
    <div>
      <%= link_to "LOGO", posts_path, class: "text-decoration-none btn btn-dark btn-lg col-6 mb-5" %>
    </div>
    <li>
      <%= link_to "ホーム", posts_path, class: "text-decoration-none btn btn-outline-dark btn-lg col-6" %>
    </li>
    <li>
      <%= link_to "検索", "#", class: "text-decoration-none btn btn-outline-dark btn-lg col-6" %>
    </li>
    <li>
      <%= link_to notifications_path, class: "text-decoration-none btn btn-outline-dark btn-lg col-6" do %>
        <% if current_user.notifications.where(checked: false).exists? %>
          <i class="fa-sharp fa-solid fa-bell fa-beat" style="color: #f2ee7d;"></i>
        <% else %>
          <i class="fa-sharp fa-solid fa-bell"></i>
        <% end %>
        通知
      <% end %>
    </li>
    <li>
      <%= link_to "投稿", new_post_path, class: "text-decoration-none btn btn-outline-dark btn-lg col-6" %>
    </li>
    <li>
      <%= link_to "プロフィール", user_path(current_user), class: "text-decoration-none btn btn-outline-dark btn-lg col-6" %>
    </li>
    <li>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-decoration-none btn btn-outline-dark btn-lg col-6" %>
    </li>
  <% end %>
</ul>
