<div class="container">
  <div class="row justify-content-center">
  </div>
  <div class="row">
    <div class="col-md-6 col-12  mx-md-auto mt-5">
      <h1 class="text-center">タグを編集</h1>
      <%= form_with model: @tag, url: admin_tag_path, method: :patch do |f| %>
      <%= render 'layouts/errors', obj: @tag %>
        <div class="row mt-5">
          <%= f.label :タグ名, class: "col-form-label col-3" %>
          <%= f.text_field :name, class: "col-md-9  col-8 form-control"%>
        </div>
        <div class="row mt-5 d-flex justify-content-center">
          <%= f.submit "変更を保存する", class: "btn btn-success"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
