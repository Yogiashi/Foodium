<div class="container">
  <div class="row">
    <div class="col-7 mx-auto mt-5">
      <h1 class="text-center">タグ一覧</h1>
      <table class="table table-borderless mt-3 ml-5">
        <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.name %></td>
            <td><%= link_to "タグを編集", edit_admin_tag_path(tag), class: "btn btn-success" %></td>
            <td><%= link_to "削除", admin_tag_path(tag), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>