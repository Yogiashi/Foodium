<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-12">
      <h1 class="text-center">タグ一覧</h1>
      <%= render 'layouts/errors', obj: @tag %>
      <div class="mt-5">
      <%= form_with model: @tag, url: admin_tags_path do |f| %>
      <div class="row">
        <%= f.label :name, "タグ追加", class: "col-3 col-form-label ml-4" %>
          <%= f.text_field :name, class: "col-6 form-control" %>
          <%= f.submit "追加", class: "btn btn-success col-2 ml-1"%>
        <% end %>
      </div>
    </div>
      <table class="table table-borderless mt-5 ml-5">
        <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.name %></td>
            <td><%= link_to "タグを編集", edit_admin_tag_path(tag), class: "btn btn-success" %></td>
            <td><%= link_to "削除", admin_tag_path(tag), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>