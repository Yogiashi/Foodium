<div class="admin-image" style=" background-color: #8fbc8f; padding-top: 5%;">
  <div class="col-5 mx-auto login-form pt-4">
  <h2 class="text-center mt-5">管理者</h2>
  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-5", placeholder: "メールアドレス" %>
    </div>
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control mt-4", placeholder: "パスワード" %>
    </div>
     <div class="actions d-flex justify-content-center pb-5">
      <%= f.submit "ログイン", class: "btn btn-primary mt-4 py-2 px-4" %>
    </div>
  <% end %>
</div>
</div>
