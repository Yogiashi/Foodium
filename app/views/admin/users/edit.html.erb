<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-11">
      <h1 class="text-center title">プロフィール編集</h1>
      <% if @user.email == 'guest@example.com'%>
        <h5 class="text-center mt-5">ゲストユーザーのプロフィールの編集はできません。</h5>
      <% else %>
        <%= form_with model: @user, url: admin_user_path do |f| %>
          <div class="row justify-content-center text-center mr-3"><%= render 'layouts/errors', obj: @user %></div>
          <div class="row mt-5">
            <%= f.label :画像, class: "col-form-label col-sm-3 text-center"%>
            <!--画像プレビュー機能-->
            <%= image_tag @user.get_profile_image, onClick: "$('.user_img_field').click()", class: "user_img_prev rounded-circle col-sm-4 col-8 ml-md-3 mx-auto", size: "180x180" %>
            <%= f.file_field :profile_image, class: "mt-5 user_img_field ml-5", style: 'display:none;', accept: 'image/*' %>
          </div>
          <div class="row mt-5">
            <%= f.label :ユーザーネーム, class: "col-form-label col-sm-3 text-center"%>
            <%= f.text_field :name, class: "col-sm-9 form-control"%>
          </div>
          <div class="row mt-5">
            <%= f.label :自己紹介, class: "col-form-label col-sm-3 text-center"%>
            <%= f.text_area :introduction, class: "col-sm-9 form-control",placeholder: "50文字まで", size: "30x5"%>
          </div>
          <div class="row mt-5">
            <%= f.label :ステータス, class: "col-form-label col-sm-3 text-center"%>
            <div class="col-sm-9 d-flex">
              <div class="form-check form-check-inline col-3 offset-1">
                <%= f.radio_button :is_deleted, :false, class: "form-check-input" %>
                <%= f.label :is_deleted_false, "有効", class: "form-check-label" %>
              </div>
              <div class="form-check form-check-inline col-5 col-md-3 offset-3 offset-md-1">
                <%= f.radio_button :is_deleted, :true, class: "form-check-input" %>
                <%= f.label :is_deleted_true, "退会", class: "form-check-label" %>
              </div>
            </div>
          </div>
          <div class="row mt-5 d-flex justify-content-center">
            <%= f.submit "変更を保存する", class: "btn btn-success"%>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>