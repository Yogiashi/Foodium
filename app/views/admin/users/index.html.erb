<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1 class="responsive-title text-center">ユーザー一覧</h1>
      <table class="table text-center mt-5">
        <thead>
          <tr>
            <th>ユーザーID</th>
            <th>ユーザーネーム</th>
            <th>メールアドレス</th>
            <th></th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to user.name, admin_user_path(user) %></td>
            <td><%= user.email  %></td>
            <td><%= link_to "投稿一覧", admin_user_posts_path(user) %></td>
            <% if user.is_deleted %>
              <td class="text-danger">退会</td>
            <% else %>
              <td class="text-success">有効</td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center mt-5"><%= paginate @users %></div>
    </div>
  </div>
</div>