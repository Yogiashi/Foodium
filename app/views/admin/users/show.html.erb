<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h1 class="text-center"><%= @user.name %>さんの詳細</h1>
      <table class="table table-borderless mt-5">
          <tr>
            <td colspan="2"><%= image_tag @user.get_profile_image, class: "rounded-circle", size: "80x80" %></td>
          </tr>
          <tr>
            <th>ユーザーネーム</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @user.introduction  %></td>
          </tr>
          <tr>
            <th>ステータス</th>
          <% if @user.is_deleted %>
            <td class="text-danger">退会</td>
          <% else %>
            <td class="text-success">有効</td>
          <% end %>
          </tr>
      </table>
      <div class="d-flex justify-content-center">
        <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success col-6 " %>
      </div>
    </div>
  </div>
</div>