<!--コメントフォーム-->
<% if post.user != current_user %>
  <%= form_with model:[post,comment], local: false do |f| %>
    <%= f.text_area :content, class: "mt-2", style: "border: none; width:80%;", placeholder: "コメントをここに" %>
    <%= f.submit "送信", class: "btn btn-outline-secondary float-right mt-3" %>
  <% end %>
<% end %>
