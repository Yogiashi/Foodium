<table class="table table-borderless">
  <% comments.each do |comment| %>
  <tr>
    <td><%= image_tag comment.user.get_profile_image, class: "rounded-circle", size: "40x40" %></td>
    <td><%= link_to comment.user.name, user_path(comment.user), class: "text-decoration-none text-dark" %></td>
    <td><%= comment.content %></td>
    <td><%= link_to "削除", post_comment_path(comment.post_id, comment), class: "btn btn-danger", method: :delete, remote: true %></td>
  </tr>
  <% end %>
</table>