<div class="container">
    <div class="row">
    <!--戻るボタン-->
    <%= link_to :back, class: "ml-auto text-dark back-btn" do %>
    <i class="fas fa-times fa-3x"></i>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-6 col-12 mx-auto">
      <h2 class="responsive-title text-center mb-5"><%= @user.name %>さんの<br>フォロー一覧</h2>
      <% if @users.exists? %>
        <table class="table table-borderless text-center">
          <% @users.each do |user| %>
            <tr>
              <td style="vertical-align:middle;">
                <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image, size: '70x70', class: "rounded-circle" %>
                <% end %>
              </td>
              <td style="vertical-align:middle;"><%= link_to user.name, user_path(user), class: "text-decoration-none text-dark" %></td>
              <td id="follow_btn_<%= user.id %>" style="vertical-align:middle;">
               <%= render 'public/relationships/btn', user: user %>
              </td>
            </tr>
          <% end %>
        </table>
      <% else %>
        <h3 class="text-center mt-5">ユーザーはいません</h3>
      <% end %>
    </div>
  </div>
</div>
