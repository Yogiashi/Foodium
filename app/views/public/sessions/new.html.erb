<div class="session-image">
  <div class="col-md-5 col-sm-12 mx-auto p-3 form-background">
    <h2 class="text-center site-name">Foodium</h2>
    <%= form_with model: @user, url: user_session_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      <div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-5", placeholder: "メールアドレス" %>
      </div>

      <div>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control mt-4", placeholder: "パスワード" %>
      </div>

      <div class="d-flex justify-content-center">
        <%= f.submit "ログイン", class: "btn btn-primary mt-4 py-2 px-4" %>
      </div>
    <% end %>
    <div class="border mt-5"></div>
    <div class="d-flex justify-content-center mt-4 border pt-3 bg-light rounded">
      <p class="mr-3">アカウントをお持ちでないですか？</p>
    <div><%= render "public/shared/links" %></div>
    </div>
    <div class="d-flex justify-content-center mt-3"><%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class:"btn btn-secondary text-white", method: :post %></div>
  </div>
</div>


