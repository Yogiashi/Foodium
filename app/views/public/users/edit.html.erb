<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1 class="text-center"><strong>プロフィールを編集</strong></h1>
      <%= form_with model:@user do |f| %>
      <%= render 'layouts/errors', obj: @user %>
        <div class="row mt-5">
          <%= image_tag @user.get_profile_image, onClick: "$('.img_field').click()", class: "img_prev rounded-circle col-3", size: "120x120" %>
          <%= f.file_field :profile_image, class: "form-control-file mt-5 img_field col-9", accept: 'image/*' %>
        </div>
        <div class="row mt-5">
          <%= f.label :ユーザーネーム, class: "col-form-label col-3"%>
          <%= f.text_field :name, class: "col-9 form-control"%>
        </div>
        <div class="row mt-5">
          <%= f.label :自己紹介, class: "col-form-label col-3"%>
          <%= f.text_area :introduction, class: "col-9 form-control",placeholder: "50文字まで", size: "30x5"%>
        </div>
        <div class="row mt-5 d-flex justify-content-center">
          <%= f.submit "変更を保存する", class: "btn btn-success mr-5"%>
          <%= link_to "退会する", "#", class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>