<div class="container">
  <div class="row">
    <div class="col-8 mx-auto mt-5">
      <h1 class="text-center"><strong>ユーザー</strong></h1>
      <table class="table mt-5">
        <% @users.each do |user| %>
        <tr>
          <td class="w-25"><%= image_tag user.get_profile_image, size: '80x80', class: "rounded-circle mr-5" %></td>
          <td><%= link_to user.name, admin_user_path(user) %></td>
          <td><%= user.email  %></td>
          <td colspan="2">
            <div id="follow_btn_<%= user.id %>">
             <%= render 'public/relationships/btn', user: user %>
            </div>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>