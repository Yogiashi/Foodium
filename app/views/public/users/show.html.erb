<div class="container">
  <div class="row">
    <div class="col-8 mx-auto mt-5">
      <div class="ml-5">
        <%= image_tag @user.get_profile_image, size: '100x100', class: "rounded-circle mr-5" %>
        <span class="mr-5"><%= @user.name %></span>
         <% if @user.id == current_user.id %>
           <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-secondary" %>
         <% end %>
         <!--フォローボタンajax-->
         <span id="follow_btn_<%= @user.id %>">
           <%= render 'public/relationships/btn', user: @user %>
          </span>
         <div class="text-center p-5"><%= simple_format(@user.introduction) %></div>
        <div class="d-flex justify-content-center border-bottom pb-3">
          <span class="mr-5">投稿数 <%= @user.posts.count %></span>
          <%= link_to user_followings_path(@user), class: "mr-5 text-decoration-none text-dark" do %>
           フォロー <%= @user.followings.count %>
          <% end %>
          <%= link_to user_followers_path(@user), class: "text-decoration-none text-dark" do %>
           フォロワー <%= @user.followers.count %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 mx-auto mt-5">
      <% if @user.id == current_user.id %>
       <!--タブ部分-->
        <ul class="tab-list list-unstyled d-flex ml-5">
          <li class="tab tab-active text-center">
            Posts
          </li>
          <li class="tab text-center">
            Likes
          </li>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-11 mx-auto">
      <!--タブで選択された要素部分-->
      <div class="tabbox-contents">
        <div class="tabbox box-show">
          <div class="flex">
          <%= render "post", posts: @posts %>
          </div>
        </div>
        <div class="tabbox">
          <div id="liked_posts" class="flex">
            <%= render "post", posts: @liked_posts %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
