<div class="container">
  <div class="row">
    <div class="col-6 mx-auto mt-5">
      <div class="ml-5">
        <%= image_tag @user.get_profile_image, size: '100x100', class: "rounded-circle mr-5" %>
        <span class="mr-5"><%= @user.name %></span>
         <% if @user.id == current_user.id %>
           <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-secondary" %>
         <% end %>
         <%= render 'public/relationships/btn', user: @user %>
         <div class="text-center p-5"><%= @user.introduction %></div>
        <div class="d-flex justify-content-center">
          フォロー <%= link_to @user.followings.count, user_followings_path(@user), class: "mr-5" %>
          フォロワー <%= link_to @user.followers.count, user_followers_path(@user) %>
        </div>
      </div>
    </div>
  </div>
</div>
