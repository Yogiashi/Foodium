<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <h1 class="text-center ">通知</h1>
      <table class="table table-borderless d-flex justify-content-center">
        <% if @notifications.present? %> <!--通知があれば表示-->
          <% @notifications.each do |notification| %>
          <tr>
            <td><%= render "#{notification.action_type}", notification: notification %></td>
          </tr>
          <% end %>
        <% else %>
          <h3 class="text-center mt-5">通知はありません</h3>
        <% end %>
      </table>
    </div>
  </div>
</div>