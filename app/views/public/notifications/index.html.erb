<div class="container">
  <div class="row">
    <div class="col-7 mx-auto mt-5">
      <h1 class="text-center">通知</h1>
      <table class="table table-borderless">
        <% if @notifications.present? %>
          <% @notifications.each do |notification| %>
          <tr>
            <td><%= render "#{notification.action_type}", notification: notification %></td>
          </tr>
          <% end %>
        <% else %>
          <h3 class="text-center mt-5">通知はありません</h3>
        <% end %> 
      </table>
    </div>
  </div>
</div>