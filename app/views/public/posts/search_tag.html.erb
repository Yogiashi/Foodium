<div class="container">
  <div class="row">
    <div class="col-11 mx-auto mt-5">
      <h1 class="text-center">タグが<strong>"<%= @tag.name %>"</strong>の投稿一覧</h1>
      <!--タグリスト-->
      <div class="d-flex justify-content-center">
        <% @tag_list.each do |list|%>
          <strong><%=link_to list.name,search_tag_path(tag_id: list.id), class: "text-dark ml-1" %></strong>
          <%="(#{list.posts.count})" %>
        <% end %>
      </div>

      <div class="flex">
        <%= render "public/users/post", posts: @posts %>
      </div>
    </div>
  </div>
