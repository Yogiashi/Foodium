<div class="container">
  <div class="row">
    <div class="col-12 justify-content-center">
      <h1 class="text-center title">タグが"<%= @tag.name %>"の投稿一覧</h1>
    </div>
  </div>
  <div class="d-md-flex justify-content-center">
    <!--タグリスト-->
    <% @tag_list.each do |list| %>
        <span class="mr-1"><strong><%=link_to list.name, search_tag_posts_path(tag_id: list.id), class: "text-dark" %></strong><%="(#{list.posts.count})" %></span>
    <% end %>
  </div>
  <div class="row  justify-content-center">
    <div class="col-12 mt-5">
      <div class="flex">
        <%= render "public/users/post", posts: @posts %>
      </div>
      <div class="d-flex justify-content-center mt-5"><%= paginate @posts %></div>
    </div>
  </div>
</div>
