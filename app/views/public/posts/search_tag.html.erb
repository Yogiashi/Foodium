<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h1 class="text-center">タグが<strong>"<%= @tag.name %>"</strong>の投稿一覧</h1>
       <div class="d-flex justify-content-center">
         <!--タグリスト-->
        <% @tag_list.each do |list|%>
          <strong><%=link_to list.name, search_tag_posts_path(tag_id: list.id), class: "text-dark ml-1" %></strong>
          <%="(#{list.posts.count})" %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-9 mt-5", style="margin-left: 155px;">
        <div class="flex">
          <%= render "public/users/post", posts: @posts %>
        </div>
      </div>
    </div>
  </div>
